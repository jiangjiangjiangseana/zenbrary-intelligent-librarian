<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- the content layout -->


<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    android:theme="@style/AppTheme"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample"
    android:orientation="horizontal">




<!--    <android.support.v7.widget.Toolbar-->
<!--        android:id="@+id/toolbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/abc_action_bar_default_height_material"-->
<!--        android:background="?attr/colorPrimary"-->
<!--        android:minHeight="?attr/actionBarSize"-->
<!--        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />-->




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="309dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="姓名: 塔塔"
        android:textSize="40dp"
        android:layout_marginTop="99dp"
        android:layout_marginLeft="20dp"

        android:textColor="#B0ABBC" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:text="學號: 100143008"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#B0ABBC" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_id"
        android:text="信箱: \n tata@nccu.edu.tw"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#B0ABBC" />


    <TextView
        android:id="@+id/content_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView"
        android:text="最近借閱: "
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#B0ABBC" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="642dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="4dp"
        android:background="#9370DB"
        android:foregroundTint="#AA3434"
        android:gravity="center"
        />





    <Button
        android:id="@+id/recommendBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/listView"
        android:text="我的推薦"
        android:textSize="50dp"
        android:background="#ECE3ED"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>


    <Button
        android:id="@+id/hashtagBtn"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@id/recommendBtn"
        android:layout_toRightOf="@+id/listView"
        android:text="開始HashTag"
        android:textSize="50dp"
        android:background="#ECE3ED"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/listView"
        android:text="登出"
        android:textSize="50dp"
        android:layout_below="@+id/hashtagBtn"
        android:background="#ECE3ED"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>




</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>