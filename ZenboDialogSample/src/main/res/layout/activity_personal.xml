<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="309dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="姓名: 塔塔"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"

        android:textColor="#B0ABBC" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:text="學號: 100143008"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#B0ABBC" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_id"
        android:text="信箱:\ntata@nccu.edu.tw"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#B0ABBC" />


    <TextView
        android:id="@+id/content_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView"
        android:text="最近借閱: "
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#B0ABBC" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="642dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="4dp"
        android:background="#9370DB"
        android:foregroundTint="#AA3434"
        android:gravity="center"
        />





    <Button
        android:id="@+id/recommendBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/listView"
        android:text="我的推薦"
        android:textSize="30dp"
        android:background="#ECE3ED"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>


    <Button
        android:id="@+id/hashtagBtn"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@id/recommendBtn"
        android:layout_toRightOf="@+id/listView"
        android:text="開始HashTag"
        android:textSize="30dp"
        android:background="#ECE3ED"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/listView"
        android:text="登出"
        android:textSize="30dp"
        android:layout_below="@+id/hashtagBtn"
        android:background="#ECE3ED"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:textColor="#A180A6"/>




</RelativeLayout>


