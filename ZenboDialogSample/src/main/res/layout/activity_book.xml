<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C2CCD6"
    android:orientation="horizontal"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/book"/>


    <TextView
        android:id="@+id/bookName"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="書名: "
        android:textSize="35dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="320dp"
        android:textColor="#1b365e"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookName"
        android:text="作者: "
        android:textSize="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="320dp"
        android:textColor="#1b365e"
        app:autoSizeTextType="uniform" />


    <TextView
        android:id="@+id/location"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorName"
        android:text="位置: "
        android:textSize="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="320dp"
        android:textColor="#1b365e"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/available"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:text="狀態: "
        android:textSize="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="320dp"
        android:textColor="#1b365e"
        app:autoSizeTextType="uniform" />





    <Button
        android:id="@+id/introduceButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView"
        android:padding="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:background="#3f4a5a"
        android:textColor="#ffff"
        android:text="書籍簡介" />


    <TextView
        android:id="@+id/score_tv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="320dp"
        android:layout_below="@+id/available"
        android:layout_marginTop="15dp"
        android:text="評分:"
        android:textSize="35dp"
        android:textColor="#1b365e"
        ></TextView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/back"
        android:layout_marginTop="15dp" />




    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="相似書籍: "
        android:textSize="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:textColor="#1b365e" />

    <ListView
        android:id="@+id/recommendList"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_below="@+id/recommend"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="#3f4a5a"
        android:foregroundTint="#AA3434"
        android:dividerHeight="20dp"
        android:divider="#C2CCD6"
        android:gravity="center" />


    <Button
        android:id="@+id/hashtagBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:padding="5dp"
        android:background="#3f4a5a"
        android:textColor="#ffff"
        android:layout_marginTop="25dp"
        android:text="新增Hashtag" />


</RelativeLayout>