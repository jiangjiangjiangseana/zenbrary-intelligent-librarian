<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/equipment"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">


    <ImageView
        android:id="@+id/floor_image"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_marginTop="20sp"></ImageView>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="120dp"
        android:background="#ffff">
    </ImageView>

    <TextView
        android:id="@+id/faci_name_textView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/floor_image"
        android:layout_marginLeft="50dp"
        android:textSize="50dp"
        android:textColor="#1b365e"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        ></TextView>

    <TextView
        android:id="@+id/faci_intro_textView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/floor_image"
        android:layout_below="@id/faci_name_textView"
        android:layout_marginLeft="50dp"
        android:textSize="35dp"
        android:textColor="#1b365e"
        android:layout_marginTop="20dp"
        ></TextView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_toRightOf="@id/floor_image"
        android:padding="5dp"
        android:background="#1b365e"
        android:textColor="#C2CCD6"
        android:layout_marginTop="640dp"
        android:text="返回前頁" />


</RelativeLayout>