<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F8FF"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">


    <Button
        android:id="@+id/hotBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="熱門書籍"
        android:textColor="#ffff"
        android:background="#1b365e"
        ></Button>

    <Button
        android:id="@+id/uuBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hotBtn"
        android:layout_marginRight="3dp"
        android:text="相似讀者都看"
        android:textColor="#ffff"
        android:background="#1b365e"
        ></Button>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C2CCD6">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview1"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/forest"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:background="#a3b4c4"
                android:textSize="20dp"
                android:textColor="#1b365e"
                android:textAlignment="center"
                android:layout_below="@id/imageview1"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview2"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/norway"
                android:layout_toRightOf="@+id/imageview1"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview1"
                android:textSize="20dp"
                android:textColor="#1b365e"
                android:textAlignment="center"
                android:layout_below="@id/imageview2"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview3"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/tomato"
                android:layout_toRightOf="@+id/imageview2"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview3"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview2"
                android:background="#CCC0CD"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:layout_below="@id/imageview3"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview4"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/kafka"
                android:layout_toRightOf="@+id/imageview3"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview4"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:layout_toRightOf="@id/imageview3"
                android:layout_below="@id/imageview2"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview5"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview4"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview5"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview4"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:background="#CCC0CD"
                android:layout_below="@id/imageview3"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview6"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview5"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview6"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview5"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:layout_below="@id/imageview5"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview7"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview6"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview7"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview6"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:background="#CCC0CD"
                android:layout_below="@id/imageview6"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview8"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview7"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview8"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview7"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:layout_below="@id/imageview7"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview9"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview8"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview9"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview8"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:background="#CCC0CD"
                android:layout_below="@id/imageview8"></TextView>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview10"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/three_kingdoms"
                android:layout_toRightOf="@+id/imageview9"
                ></android.support.v7.widget.AppCompatImageView>

            <TextView
                android:id="@+id/textview10"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imageview9"
                android:textSize="20dp"
                android:textColor="#5C515E"
                android:textAlignment="center"
                android:layout_below="@id/imageview9"></TextView>






        </RelativeLayout>
    </HorizontalScrollView>










</RelativeLayout>