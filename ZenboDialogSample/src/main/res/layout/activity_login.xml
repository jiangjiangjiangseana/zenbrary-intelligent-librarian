<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2CCD6"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">

    <ImageView
        android:layout_width="463dp"
        android:layout_height="700dp"
        android:background="@drawable/login"
        android:layout_marginTop="162dp"/>

    <ImageView
        android:layout_width="636dp"
        android:layout_height="600dp"
        android:background="@drawable/register"
        android:layout_marginLeft="580dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="750dp"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="#1b365e"
        android:textSize="45dp"
        />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="信箱 E-mail: "
        android:layout_marginLeft="630dp"
        android:layout_marginTop="20dp"
        android:textColor="#1b365e"
        android:layout_below="@+id/textview_info"
        android:textSize="30dp"/>


    <EditText
        android:id="@+id/login_account"
        android:layout_width="500dp"
        android:layout_marginLeft="630dp"
        android:layout_height="45dp"
        android:layout_below="@+id/account"
        android:background="#dec1b9"
        android:textSize="30dp"
        android:textColor="#1b365e"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/login_account"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="630dp"
        android:gravity="center"
        android:text="密碼 Password: "
        android:textColor="#1b365e"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/login_pw"
        android:layout_marginLeft="630dp"
        android:layout_width="500dp"
        android:layout_height="45dp"
        android:ems="10"
        android:layout_below="@+id/pw"
        android:background="#dec1b9"
        android:textSize="30dp"
        android:textColor="#1b365e"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textview_info"
        android:layout_marginLeft="630dp"
        android:layout_marginTop="230dp"
        android:text="@string/login"
        android:textSize="40dp"
        android:backgroundTint="#1b365e"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textview_info"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="900dp"
        android:text="註冊 Register"
        android:textSize="40dp"
        android:backgroundTint="#1b365e"/>


    <Button
        android:id="@+id/backButton"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:background="@drawable/back"
        android:layout_marginTop="30dp" />


</RelativeLayout>