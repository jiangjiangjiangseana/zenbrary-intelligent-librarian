<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F8FF"
    android:orientation="horizontal"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="註冊 Register"
        android:textColor="#9370DB"
        android:textSize="45dp"
        />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="姓名 Ｎame: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/textview_info"
        />


    <EditText
        android:id="@+id/editText_user_name"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:background="#E2DDF3"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/studentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="學號 Student ID: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/editText_user_name"
        />


    <EditText
        android:id="@+id/editText_studentId"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentId"
        android:background="#E2DDF3"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="信箱 E-mail: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/editText_studentId"
        />


    <EditText
        android:id="@+id/editText_account"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:background="#E2DDF3"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_account"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="密碼 Password: "
        android:layout_marginLeft="220dp"
        android:textColor="#9370DB" />

    <EditText
        android:id="@+id/editText_pw"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/pw"
        android:background="#E2DDF3"
        android:layout_marginLeft="220dp"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="確認密碼 Password Confirm: "
        android:textColor="#9370DB"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/editText_pw"
        />


    <EditText
        android:id="@+id/editText_confirm"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm"
        android:background="#E2DDF3"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="性別 Gender: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText_confirm"
        />


    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/gender"
        android:background="#E2DDF3"
        tools:ignore="DuplicateIds">

        <RadioButton
            android:id="@+id/gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#9370DB"
            android:text="生理男 Male"
            />

        <RadioButton
            android:id="@+id/gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9370DB"
            android:text="生理女 Female"/>

    </RadioGroup>

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="系所 Department: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/radio_gender"
        />


    <EditText
        android:id="@+id/editText_department"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/department"
        android:background="#E2DDF3"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText_department"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#929AC3"
        android:text="確認 confirm" />


    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:padding="5dp"
        android:background="#ECE3ED"
        android:textColor="#A180A6"
        android:layout_marginTop="50dp"
        android:text="返回前頁" />


</RelativeLayout>