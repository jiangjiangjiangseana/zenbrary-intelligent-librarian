<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F8FF"
    android:orientation="horizontal"
    tools:context="com.asus.zenbodialogsample.ZenboDialogSample">

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="註冊 Register"
        android:textColor="#9370DB"
        android:textSize="45dp"
        />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="信箱 E-mail: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/textview_info"
        />


    <EditText
        android:id="@+id/editTexta"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:background="#CCBBFF"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTexta"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="密碼 Password: "
        android:layout_marginLeft="220dp"
        android:textColor="#9370DB" />

    <EditText
        android:id="@+id/editTextb"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/pw"
        android:background="#CCBBFF"
        android:layout_marginLeft="220dp"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="確認密碼 Password Confirm: "
        android:textColor="#9370DB"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/editTextb"
        />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:background="#CCBBFF"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="姓名 Name: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText1"
        />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:background="#CCBBFF"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="電話 Cellphone: "
        android:textColor="#9370DB"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText2"
        />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview3"
        android:background="#CCBBFF"
        android:ems="10"
        android:layout_marginLeft="220dp"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="179dp"
        android:backgroundTint="#929AC3"
        android:text="確認 confirm" />


</RelativeLayout>